  <!-- Stay in Touch -->
  <section class="section subscribe-section">
    <div class="container">
      <div class="subscribe-block">
        <div class="subscribe-header">
          <span class="eyebrow">Stay in Touch</span>
          <h2 class="subheadline">Get updates<br />that matter to you.</h2>
          <p class="form-intro">We send event announcements, new resources, and studio news — sorted by what you care about and where you are.</p>
        </div>
        <div class="subscribe-form-wrap">
          <SubscribeForm client:load />
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  .connect-hero {
    min-height: 70vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-block: 8rem 5rem;
    position: relative;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background-image: url('/images/AaronMOMCG.png');
    background-size: cover;
    background-position: center 20%;
    background-repeat: no-repeat;
  }

  .hero-bg::after {
    content: '';
    position: absolute;
    inset: 0;
    background:
      linear-gradient(to right, rgba(8, 3, 22, 0.50) 0%, rgba(8, 3, 22, 0.22) 50%, rgba(8, 3, 22, 0.08) 100%),
      linear-gradient(to top, rgba(8, 3, 22, 0.62) 0%, rgba(8, 3, 22, 0.20) 30%, transparent 60%);
  }

  .hero-content { position: relative; z-index: 1; }
  .hero-content .eyebrow { margin-bottom: 1.25rem; }
  .display { font-size: clamp(3.5rem, 9vw, 8rem); }
  .accent-text { color: var(--accent); }

  /* Shared section bg */
  .email-section,
  .subscribe-section {
    background: linear-gradient(to right, #080316 0%, #1c0832 100%);
  }

  .subscribe-section {
    border-top: 1px solid rgba(255,255,255,0.07);
  }

  /* Email block */
  .email-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.25rem;
    max-width: 680px;
    margin: 0 auto;
  }

  .email-block .eyebrow { margin-bottom: 0; }

  .email-desc {
    font-size: var(--text-base);
    color: var(--fg-2);
    line-height: 1.65;
    max-width: 440px;
  }

  .email-link {
    display: inline-block;
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    letter-spacing: -0.03em;
    color: var(--accent);
    text-decoration: none;
    line-height: 1;
    margin-top: 0.5rem;
    border-bottom: 3px solid transparent;
    transition: var(--transition);
  }

  .email-link:hover {
    border-bottom-color: var(--accent);
    opacity: 0.85;
  }

  /* Social links */
  .social-links {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .social-label {
    font-size: var(--text-xs);
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--fg-3);
  }

  .social-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    color: var(--fg-2);
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: 500;
    transition: var(--transition);
    background: var(--bg-3);
  }

  .social-link:hover {
    border-color: var(--accent);
    color: var(--accent);
    background: var(--accent-dim);
  }

  .social-link svg {
    flex-shrink: 0;
  }

  /* Subscribe block */
  .subscribe-block {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: start;
    max-width: 900px;
    margin: 0 auto;
  }

  .subscribe-header {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    position: sticky;
    top: 7rem;
  }

  .subscribe-header .eyebrow { margin-bottom: 0; }

  .form-intro {
    font-size: var(--text-sm);
    color: var(--fg-2);
    line-height: 1.6;
  }

  :global(.form-note) {
    font-size: var(--text-xs);
    color: var(--fg-3);
  }

  :global(.form-error) {
    font-size: var(--text-sm);
    color: #ff6b6b;
  }

  :global(.form-success) {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 2rem;
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: var(--radius-lg);
    background: rgba(255,255,255,0.03);
  }

  :global(.form-success-headline) {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 800;
    letter-spacing: -0.02em;
    color: var(--accent);
  }

  :global(.form-success-body) {
    font-size: var(--text-sm);
    color: var(--fg-2);
    line-height: 1.6;
  }

  :global(.interests-grid) {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
    margin-top: 0.25rem;
  }

  :global(.interest-chip) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 0.875rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    font-size: var(--text-sm);
    color: var(--fg-2);
    cursor: pointer;
    transition: var(--transition);
    background: var(--bg-3);
  }

  :global(.interest-chip input) {
    width: auto;
    margin: 0;
    accent-color: var(--accent);
  }

  :global(.interest-chip.is-selected) {
    border-color: var(--accent);
    color: var(--accent);
    background: var(--accent-dim);
  }

  @media (max-width: 768px) {
    .subscribe-block { grid-template-columns: 1fr; gap: 2.5rem; }
    .subscribe-header { position: static; }
  }
</style>
