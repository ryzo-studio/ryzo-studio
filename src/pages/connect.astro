---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Connect"
  description="Get in touch with Ryzo Studios — for event inquiries, partnerships, press, or just to say hello."
>

  <section class="connect-hero">
    <div class="hero-bg"></div>
    <div class="container hero-content">
      <span class="eyebrow">Connect</span>
      <h1 class="display">
        Let's make<br />
        <span class="accent-text">something</span><br />
        real.
      </h1>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="connect-grid">

        <!-- Contact Options -->
        <div class="contact-options">
          <span class="eyebrow">Ways to Reach Us</span>
          <div class="options-list">
            {[
              { label: 'Events &amp; Activations', desc: 'Book a school activation, community event, or film screening.', href: '/events', cta: 'Event Inquiry →' },
              { label: 'Partnerships', desc: 'Explore research partnerships, funding, or content collaboration.', href: '#form', cta: 'Start a Conversation →' },
              { label: 'Press &amp; Media', desc: 'Press kit requests, interviews, and media inquiries.', href: '#form', cta: 'Press Inquiry →' },
              { label: 'Educators', desc: 'Get guides, curriculum resources, or bulk licensing info.', href: '/guides', cta: 'Browse Guides →' },
            ].map(({ label, desc, href, cta }) => (
              <a href={href} class="option-card">
                <div>
                  <h3 class="option-label" set:html={label}></h3>
                  <p class="option-desc">{desc}</p>
                </div>
                <span class="option-cta">{cta}</span>
              </a>
            ))}
          </div>
        </div>

        <!-- Contact Form -->
        <div class="contact-form-wrap" id="form">
          <span class="eyebrow">Send a Message</span>
          <h2 class="subheadline">Tell us<br />what's on your mind.</h2>

          <form class="contact-form" name="contact" method="POST">
            <div class="form-row">
              <div class="form-group">
                <label for="first-name">First Name *</label>
                <input type="text" id="first-name" name="first-name" required placeholder="First" />
              </div>
              <div class="form-group">
                <label for="last-name">Last Name *</label>
                <input type="text" id="last-name" name="last-name" required placeholder="Last" />
              </div>
            </div>

            <div class="form-group">
              <label for="email">Email *</label>
              <input type="email" id="email" name="email" required placeholder="you@example.com" />
            </div>

            <div class="form-group">
              <label for="org">Organization</label>
              <input type="text" id="org" name="org" placeholder="School, company, or personal" />
            </div>

            <div class="form-group">
              <label for="subject">Subject *</label>
              <select id="subject" name="subject" required>
                <option value="">Select a topic...</option>
                <option value="event">Event / Activation</option>
                <option value="partnership">Partnership</option>
                <option value="press">Press / Media</option>
                <option value="education">Educator Resources</option>
                <option value="general">General Inquiry</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" rows="5" required placeholder="What's on your mind?"></textarea>
            </div>

            <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
            <p class="form-note">We respond to all messages within 3–5 business days.</p>
          </form>
        </div>

      </div>
    </div>
  </section>

</Layout>

<style>
  .connect-hero {
    min-height: 70vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-block: 7rem 5rem;
    position: relative;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 60% 40%, rgba(245, 200, 66, 0.07) 0%, transparent 50%),
      linear-gradient(to right, #080316, #1c0832);
  }

  /* Shared background for all sections */
  .section,
  .section-sm {
    background: linear-gradient(to right, #080316 0%, #1c0832 100%);
  }

  .hero-content { position: relative; z-index: 1; }
  .hero-content .eyebrow { margin-bottom: 1.25rem; }
  .display { font-size: clamp(3.5rem, 9vw, 8rem); }
  .accent-text { color: var(--accent); }

  .connect-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: start;
  }

  .contact-options {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .options-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .option-card {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 2rem;
    padding: 1.75rem 0;
    border-bottom: 1px solid var(--border);
    transition: var(--transition);
  }

  .option-card:first-child { padding-top: 0; }
  .option-card:last-child { border-bottom: none; }

  .option-card:hover .option-label {
    color: var(--accent);
  }

  .option-label {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: 0.375rem;
    transition: var(--transition);
  }

  .option-desc {
    font-size: var(--text-sm);
    color: var(--fg-2);
    max-width: 280px;
    line-height: 1.5;
  }

  .option-cta {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--fg-3);
    white-space: nowrap;
    transition: var(--transition);
  }

  .option-card:hover .option-cta {
    color: var(--accent);
  }

  /* Form */
  .contact-form-wrap {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-form-wrap .eyebrow { margin-bottom: 0; }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-top: 0.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-note {
    font-size: var(--text-xs);
    color: var(--fg-3);
  }

  @media (max-width: 768px) {
    .connect-grid { grid-template-columns: 1fr; gap: 4rem; }
    .form-row { grid-template-columns: 1fr; }
    .option-card { flex-direction: column; align-items: flex-start; gap: 0.75rem; }
  }
</style>
